{
  "port": "8050",
  "host": "localhost",
  "open": true,
  "livereload": true,
  "root": "dist/",
  "images": {
    "input": "src/img/**/*.{jpg,png,jpeg,gif}",
    "output": "dist/img/"
  },
  "svg": {
    "input": "src/img/svg/**/*.svg",
    "output": "dist/img/",
    "conf": {
      "mode": {
        "symbol": {
          "dest": "",
          "sprite": "svg/sprite.svg"
        }
      }
    }
  },
  "scripts": {
    "input": "src/js/*",
    "output": "dist/js/"
  },
  "styles": {
    "input": "src/style/**/*.scss",
    "output": "dist/style/"
  },
  "templates": {
    "input": "src/*.html",
    "output": "dist/"
  }
}
